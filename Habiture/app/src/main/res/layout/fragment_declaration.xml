<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@drawable/default_wallpaper"
    android:weightSum="1">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp">


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_margin="10dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="3">

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/imageView2"
                    android:background="@mipmap/declaration_logo" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1">

                <TextView
                    android:background="#ae000000"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="每"
                    android:textSize="25sp"
                    android:textColor="#ffffffff"
                    android:id="@+id/textView2"
                    android:layout_weight="1"
                    android:layout_marginLeft="5dp"
                    android:layout_gravity="center"
                    android:gravity="center" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1">

                <Spinner
                    android:background="#6aff77d6"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/spPeroid"
                    android:layout_weight="1"
                    android:layout_marginLeft="5dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1">

                <Spinner
                    android:background="#6aff77d6"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/spFrequency"
                    android:layout_weight="1"
                    android:layout_marginLeft="5dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:layout_gravity="left">

                <TextView
                    android:background="#ae000000"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:text="次"
                    android:textSize="25sp"
                    android:textColor="#ffffffff"
                    android:id="@+id/textView3"
                    android:layout_marginLeft="5dp"
                    android:layout_gravity="center"
                    android:gravity="center" />
            </LinearLayout>


        </LinearLayout>





        <EditText
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:id="@+id/etDeclaration"
            android:hint="@string/enter_declaration"
            android:textColorHint="#ffffffff"
            android:textColor="#ffffffff"
            android:textSize="25sp"
            android:layout_weight="4"
            android:background="#ae000000"
            android:gravity="top" />


        <EditText
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:id="@+id/etCost"
            android:hint="@string/enter_cost"
            android:textColorHint="#ffffffff"
            android:textColor="#ffffffff"
            android:text=""
            android:textSize="25sp"
            android:layout_weight="4"
            android:background="#ae000000"
            android:gravity="top"
            android:layout_marginTop="20dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_margin="10dp">

            <Button
                android:background="#b74aff9f"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="發佈"
                android:textSize="30sp"
                android:id="@+id/btnDeclare"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:textColor="#ffffffff" />

            <Button
                android:background="#bdff3d41"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="取消"
                android:textSize="30sp"
                android:id="@+id/btnCancel"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:textColor="#ffffffff" />
        </LinearLayout>
    </LinearLayout>

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/seekBar"
        android:layout_gravity="right" />

</LinearLayout>